<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flight_booking_exit_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/share_my_profile_title"
        android:textColor="@color/primaryColorDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/my_profile_qr_code"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@string/share_my_profile_title"
                android:src="@mipmap/ic_launcher" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="60"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:id="@+id/d_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gokul Nath Periasamy"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/d_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Hewlett-Packard Enterprise"
                android:textSize="12dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/d_company_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Electronic City, Phase I, Bangalore - 560100, Karnataka, India"
                android:textSize="10dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/d_email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="E: gokulnath@hpe.com"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/d_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="M: +919945843700"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/d_office_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="O: 08033270000"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/d_fax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="F: 08033270000"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>